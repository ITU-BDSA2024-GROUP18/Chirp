@page "/"
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";

    int pageSize = 32;
    int currentPage = string.IsNullOrEmpty(Request.Query["page"]) ? 1 : int.Parse(Request.Query["page"]);
    var cheeps = Model.Cheeps;
    int totalCheeps = cheeps.Count; 
}
@using Microsoft.AspNetCore.Identity;
@using Chirp.Core.Entities;
@inject SignInManager<Author> SignInManager;

<style>
    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    .pagination a {
        margin: 0 5px;
        padding: 5px 10px;
        border: 1px solid #ddd;
        color: #007bff;
        text-decoration: none;
    }
    .pagination a.active {
        font-weight: bold;
        color: white;
        background-color: #007bff;
    }
    .pagination a:hover {
        background-color: #0056b3;
        color: white;
    }
</style>

<div>
    <h2>Public Timeline</h2>

    @if (cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        <div style="word-wrap: break-word;">
                            @cheep.Message
                        </div>
                        <small>&mdash; @cheep.Timestamp</small>
                    </p>
                </li>
            }
        </ul>

        <div class="pagination">
            @if (currentPage > 1)
            {
                <a href="/?page=@(currentPage - 1)">Previous</a>
            }

            @for (int i = 1; i <= Math.Ceiling(totalCheeps / (double)pageSize); i++)
            {
                <a href="/?page=@i" class="@(i == currentPage ? "active" : "")">@i</a>
            }

            @if (currentPage > 1)
            {
                <a href="/?page=@(currentPage)" class="active">@currentPage</a>
            }

            @if (cheeps.Count == pageSize)
            {
                <a href="/?page=@(currentPage + 1)">Next</a>
            }
        </div>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>